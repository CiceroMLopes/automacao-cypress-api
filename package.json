{
  "name": "automacao-api-cypress",
  "version": "1.0.0",
  "private": true,
  "description": "Automação de testes de API com Cypress",
  "license": "MIT",
  "scripts": {
    "cypress:open": "cypress open",
    "cypress:run": "cypress run --reporter mochawesome",
    "report:merge": "mochawesome-merge cypress/reports/mochawesome*.json -o cypress/reports/report.json",
    "report:generate": "marge cypress/reports/report.json -f report -o cypress/reports",
    "test": "npm run cypress:run && npm run report:merge && npm run report:generate"
  },
  "devDependencies": {
    "cypress": "^13.12.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.4.1",
    "mochawesome-report-generator": "^6.2.0"
  }
}
